---
import { ViewTransitions } from "astro:transitions";
import Nav from "../components/astro/Nav/index.astro";

export interface Props {
  title: string;
}

const { title } = Astro.props;
---

<!DOCTYPE html>
<html lang="es">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <link rel="icon" type="image/png" href="/favicon.png" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
    <link rel="icon" type="image/x-icon" href="/PEE_logo.png" />
    <!-- META -->
    <!-- Primary Meta Tags -->
    <title>Programación en español</title>
    <meta name="title" content="Programación en español" />
    <meta
      name="description"
      content="Programación en español. Comunidad de habla hispana de desarrollo web y multiplataforma donde compartimos recursos, realizamos eventos de desarrollo y aprendemos nuevas tecnologías."
    />
    <meta name="author" content="Pedro Plasencia" />
    <meta name="robots" content="index,follow" />
    <meta name="copyright" content="Pedro Plasencia" />

    <!-- Open Graph / Facebook -->
    <meta property="og:type" content="website" />
    <meta property="og:url" content="https://programacion-es.dev/" />
    <meta property="og:title" content="Programación en español" />
    <meta
      property="og:description"
      content="Programación en español. Comunidad de habla hispana de desarrollo web y multiplataforma donde compartimos recursos, realizamos eventos de desarrollo y aprendemos nuevas tecnologías."
    />
    <meta property="og:image" content="/programacion en español.webp" />

    <!-- Twitter -->
    <meta name="twitter:card" content="summary_large_image" />
    <meta name="twitter:url" content="https://programacion-es.dev/" />
    <meta name="twitter:title" content="Programación en español" />
    <meta
      name="twitter:description"
      content="Programación en español. Comunidad de habla hispana de desarrollo web y multiplataforma donde compartimos recursos, realizamos eventos de desarrollo y aprendemos nuevas tecnologías."
    />
    <meta name="twitter:image" content="/programacion en español.webp" />
    <link rel="stylesheet" href="/fonts/icofont.min.css" />
    <script
      defer
      data-domain="programacion-es.dev"
      src="https://plausible.io/js/script.js"
    ></script>
    <ViewTransitions/>
  </head>
  <body transition:animate="slide">
    <Nav />
    <slot />
    <footer>
      Hecho con ❤ y <a href="https://astro.build/">Astro</a>. Por{" "}
      <a href="https://programacion-es.dev"
        >Pedro Plasencia (Programación en español)</a
      >
    </footer>
  </body>
</html>
<style is:global>
  html,
  body,
  #root {
    overflow-x: hidden;
  }

  html {
    padding: 0px;
    margin: 0px;
    font-family: monospace, system-ui, sans-serif;
    background-color: #151c34;
    color: #fff;
    font-size: 16px;
  }

  * {
    margin: 0;
    padding: 0;
    box-sizing: border-box;
  }

  body {
    padding: 10px 20px;
  }

  footer {
    margin: 20px 0;
    text-align: center;
  }

  footer a {
    color: #38b6ff;
    text-decoration: none;
    font-weight: bold;
  }

  code {
    font-family: Menlo, Monaco, Lucida Console, Liberation Mono,
      DejaVu Sans Mono, Bitstream Vera Sans Mono, Courier New, monospace;
  }
</style>
