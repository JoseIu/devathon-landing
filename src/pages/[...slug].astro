    },
    {
      slug: "navidad",
      title: "Tutorial especial de navidad",
      video: "https://www.youtube.com/embed/WlJGqct5lKc",
    },
    {
      slug: "agile",
      title: "Metodologías ágiles",
      video: "https://www.youtube.com/embed/KQ-zxvMyCnk",
    },
    {
      slug: "github",
      title: "Mejora tu perfil de GitHub",
      video: "https://www.youtube.com/embed/mJza8XtuTNU",
    },
    {
      slug: "css",
      title: "Curso CSS",
      video: "https://www.youtube.com/embed/ra4-k5WIALw",
    },
    {
      slug: "html",
      title: "Curso HTML",
      video: "https://www.youtube.com/embed/S_9A2AUmV_8",
    },
  ];

  return pages.map(({ slug, title, video }) => {
    return {
      params: { slug },
      props: { title, video },
    };
  });
}

const { title, video } = Astro.props;
---

<Layout title={title}>
  <main>
    <div class={styles["main-video-container"]}>
      <h1>{title}</h1>
      <iframe
        width="560"
        height="315"
        src={video}
        title="YouTube video player"
        frameborder="0"
        allow="accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture; web-share"
        allowfullscreen></iframe>
    </div>
  </main>
</Layout>
